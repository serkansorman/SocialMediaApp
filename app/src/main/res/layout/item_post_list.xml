<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="postModel"
            type="com.citizenme.socialmediaapp.model.Post" />

        <variable
            name="postListener"
            type="com.citizenme.socialmediaapp.listener.PostClickListener" />

    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        android:onClick="@{() -> postListener.onPostClick(postModel)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/post_thumbnail_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/post_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@{postModel.title}"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/post_body_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text = "@string/body_test_text"
                    android:text="@{postModel.body}" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>